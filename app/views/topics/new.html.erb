<div class="col-md-6 col-md-offset-3">
    <%= form_for(@topic) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :url %>
        <%= f.text_field :url, class: "form-control" %>
      </div>

      <div class="form-group fg">
         <label>Note</label>
        <input type="text" name="topic[notes][][description]" class="form-control note-field" />
      </div>
      <div class="add-note-field"> </div>

      <div class="text-right">
        <%= f.submit "Create topic", class: "btn btn-primary" %>
        <a class="btn btn-warning add-button">+ Add another note</a>
      </div>
    <% end %>    
</div>

<script>
  var addButton = document.getElementsByClassName('add-button');
  var textField = document.getElementsByClassName('add-note-field');
  var noteField = document.getElementsByClassName('fg');
  addButton[0].onclick = function () {
    textField[0].innerHTML += noteField[0].outerHTML;
  }
</script>
